source ~/.dotfiles-local/vimrc

nnoremap ` :


colorscheme forloop7

set showcmd                         " display incomplete commands 
set colorcolumn=100                 " show colored column at column 100 as visual indicator.
set tabstop=4                       " Replace tabs with spaces
set shiftwidth=4
set expandtab
set shortmess+=I                    " No startup message
set virtualedit=block               " Move around screen freely when in visual mode.
set wildmode=longest,list
set splitbelow
set splitright
set textwidth=0 wrapmargin=0        " this turns off physical line wrapping (ie: automatic insertion of newlines)
set autoindent
